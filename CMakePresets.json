                {
                    "type": "configure",
                    "name": "ninja"
                },
                {
                    "type": "build",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "release",
            "displayName": "Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja"
                },
                {
                    "type": "build",
                    "name": "release"
                }
            ]
        },
        {
            "name": "debug-test",
            "displayName": "DebugTest",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja"
                },
                {
                    "type": "build",
                    "name": "debug"
                },
                {
                    "type": "test",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "release-test",
            "displayName": "ReleaseTest",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja"
                },
                {
                    "type": "build",
                    "name": "release"
                },
                {
                    "type": "test",
                    "name": "release"
                }
            ]
        }
    ]
